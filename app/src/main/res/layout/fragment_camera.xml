<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fitsSystemWindows="true"
    tools:context=".ui.camera.CameraFragment">

        <androidx.camera.view.PreviewView
            android:fitsSystemWindows="true"
            android:id="@+id/preview_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="16dp"
            >
            <CheckBox
                android:id="@+id/flash_checkbox"
                style="@style/CameraOption"
                android:background="@drawable/flash"
                android:button="@null"
                app:buttonTint="@android:color/white" />
            <RadioGroup
                android:id="@+id/modes_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RadioButton
                    android:id="@+id/single_radio"
                    android:button="@null"
                    android:background="@drawable/single_toggle"
                    style="@style/CameraOption"/>
                <RadioButton
                    android:id="@+id/ocr_radio"
                    android:button="@null"
                    android:background="@drawable/ocr_toggle"
                    style="@style/CameraOption"/>
                <RadioButton
                    android:id="@+id/batch_radio"
                    android:button="@null"
                    android:background="@drawable/batch_toggle"
                    style="@style/CameraOption"/>
            </RadioGroup>

        </LinearLayout>
        <FrameLayout
            android:id="@+id/shutter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".8"
            android:background="@color/black"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/batch_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_margin="48dp">
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/preview_image_view"
                android:scaleType="fitXY"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="0dp"
                />
            <TextView
                android:id="@+id/page_count_text_view"
                android:text="0"
                android:textColor="@color/icons"
                android:gravity="center"
                android:background="@drawable/badge"
                android:layout_gravity="top|end"
                android:layout_margin="0dp"
                android:textSize="10sp"
                android:layout_width="16dp"
                android:layout_height="16dp"/>
        </FrameLayout>

        <ImageButton
            android:id="@+id/batch_save_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="48dp"
            android:background="@null"
            android:tint="@color/white"
            android:src="@drawable/ic_check"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom|end"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:layout_gravity="bottom|center"
            app:tint="@color/white"
            app:backgroundTint="@color/colorAccent"
            app:fabSize="auto"
            app:fabCustomSize="70dp"
            app:maxImageSize="40dp"
            android:layout_margin="32dp"
            android:id="@+id/camera_capture_button"
            />
    </FrameLayout>
