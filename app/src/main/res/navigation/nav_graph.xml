<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.moor.scannit.ui.home.HomeFragment"
        android:label="Documents"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_homeFragment_to_documentFragment"
            app:destination="@id/documentFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.moor.scannit.ui.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.moor.scannit.ui.camera.CameraFragment"
        tools:layout="@layout/fragment_camera" >
        <action
            android:id="@+id/action_cameraFragment_to_imageProccessFragment"
            app:destination="@id/imageProccessFragment" />
        <argument
            android:name="documentId"
            app:argType="long" />
    </fragment>
    <fragment
        android:id="@+id/imageProccessFragment"
        android:name="com.moor.scannit.ui.camera.ImageProcessFragment"
        android:label="fragment_image_proccess"
        tools:layout="@layout/fragment_image_process" >
        <argument
            android:name="uri"
            app:argType="android.net.Uri" />
        <action
            android:id="@+id/action_imageProccessFragment_to_documentFragment"
            app:destination="@id/documentFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_imageProccessFragment_to_cropFragment"
            app:destination="@id/cropFragment" />
        <action
            android:id="@+id/action_imageProccessFragment_to_imageFilterFragment"
            app:destination="@id/imageFilterFragment" />
    </fragment>
    <fragment
        android:id="@+id/documentFragment"
        android:name="com.moor.scannit.ui.document.DocumentFragment"
        tools:layout="@layout/fragment_document">
        <argument
            android:name="documentId"
            app:argType="long" />
        <action
            android:id="@+id/action_documentFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_documentFragment_to_pageFragment"
            app:destination="@id/pageFragment" />
    </fragment>
    <fragment
        android:id="@+id/pageFragment"
        android:name="com.moor.scannit.ui.document.PageFragment"
        android:label="PageFragment" >
        <action
            android:id="@+id/action_pageFragment_to_cameraFragment"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_pageFragment_to_extractedTextFragment"
            app:destination="@id/extractedTextFragment" />
    </fragment>
    <fragment
        android:id="@+id/extractedTextFragment"
        android:name="com.moor.scannit.ui.preview.ExtractedTextFragment"
        android:label="Extracted Text"
        tools:layout="@layout/fragment_extracted_text_list" />
    <fragment
        android:id="@+id/cropFragment"
        android:name="com.moor.scannit.ui.camera.CropFragment"
        android:label="CropFragment" />
    <fragment
        android:id="@+id/imageFilterFragment"
        android:name="com.moor.scannit.ui.camera.ImageFilterFragment"
        android:label="fragment_image_filter"
        tools:layout="@layout/fragment_image_filter" />
</navigation>